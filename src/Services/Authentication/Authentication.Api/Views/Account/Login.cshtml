@model LoginViewModel

<div class="login-page">
    <div class="lead">
        <h1>Sign up or Sign in</h1>
        <p>Please fill in your mail address to start or continue playing Hello Moon!</p>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <form asp-route="Login" id="login">
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input class="form-control" placeholder="Email address" asp-for="Email" type="email" autofocus>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="RememberLogin">
                        <label class="form-check-label" asp-for="RememberLogin">
                            Remember My Login
                        </label>
                    </div>
                </div>

                <button class="btn btn-primary" name="button" value="login">Play!</button>
                <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>
            </form>
        </div>
    </div>
</div>