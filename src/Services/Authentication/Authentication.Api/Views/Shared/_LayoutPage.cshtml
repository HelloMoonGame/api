@{
    Layout = "_Layout";
}

<header class="site-header mdc-theme--primary-bg">
    <img src="~/img/logo-on-dark.svg" alt="Hello Moon" />
</header>

<main class="page-content">
    <div class="mdc-card">
        <div class="mdc-card-wrapper__text-section">
            @RenderBody()
        </div>
    </div>
</main>

@section scripts {
    @await RenderSectionAsync("scripts", false)
}